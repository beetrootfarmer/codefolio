<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.codefolio.mapper.UserMapper">

    <resultMap type="com.codefolio.vo.UserVO" id="UserResult">
        <result property="userSeq" column="user_seq"/>
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="pwd" column="pwd"/>
        <result property="email" column="email"/>
        <result property="gitId" column="gitId"/>
        <result property="job" column="job"/>
        <result property="stack" column="stack"/>
        <result property="introFile" column="introFile"/>
        <result property="img" column="img"/>


    </resultMap>

<!--    테스트 쿼리 : 모든 회원정보 리스트 출력-->
    <!--유저 리스트 받아오기-->
    <select id="getAllUserData" parameterType="com.codefolio.vo.UserVO" resultType="map">
        SELECT * FROM codefolio.user ORDER BY user_seq DESC;
    </select>

    <select id="getUser" parameterType="String" resultType="com.codefolio.vo.UserVO" resultMap="UserResult">
        SELECT * FROM codefolio.user WHERE name=#{name} ORDER BY name DESC LIMIT 1
    </select>

    <!--join user-->
    <insert id="joinUser" parameterType="com.codefolio.vo.UserVO"  useGeneratedKeys="true" keyProperty="userSeq">
            INSERT INTO codefolio.user SET
            pwd=#{pwd}, name=#{name},email=#{email},gitId=#{gitId},creDate=NOW(),recDate=NOW();
    </insert>

    <!--회원정보수정(마이페이지) -> name,pwd,gitId,stack,job,img,introFile-->
<!--동적 SQL <if>사용 => mybatis의 기능-->
    <update id="updateUser" parameterType="com.codefolio.vo.UserVO">
        UPDATE user SET
<!--                <if test="name!=null">name=#{name},</if>-->
<!--                <if test="pwd!=null">pwd=#{pwd},</if>-->
<!--                <if test="gitId!=null">gitId=#{gitId},</if>-->
<!--                <if test="job!=null">job=#{job},</if>-->
<!--                <if test="stack!=null">stack=#{stack},</if>-->
<!--                <if test="introFile!=null">introFile=#{introFile}</if>-->

        SET pwd=#{pwd},gitId=#{gitId},job=#{job},stack=#{stack},introFile=#{introFile}
        WHERE name=#{name} ORDER BY name DESC LIMIT 1
    </update>

    <!--user delete-->
    <delete id="delete" parameterType="String">
        DELETE FROM codefolio.user WHERE name=#{name} ORDER BY name DESC LIMIT 1
    </delete>

    <!--email 중복 체크-->
    <select id="checkEmail" parameterType="String" resultType="int">
        SELECT COUNT(email) FROM codefolio.user WHERE email=#{email};
    </select>

    <!--email 중복 체크-->
    <select id="checkName" parameterType="String" resultType="int">
        SELECT COUNT(name) FROM codefolio.user WHERE name=#{name};
    </select>

    <!--유저 로그인 => security 적용 X-->
    <select id="checkLogin" parameterType="com.codefolio.vo.UserVO" resultType="String">
        SELECT name FROM codefolio.user WHERE email=#{email} and pwd=#{pwd} ORDER BY name DESC LIMIT 1;
    </select>

<!--findByLoginPwd-->
    <select id="searchEmail"
            resultType="com.codefolio.vo.UserVO">
        SELECT *
        FROM codefolio.user
        WHERE
            email=#{email}
    </select>

<!--비밀번호 변경-->
    <update id="changePwd" >
        UPDATE user SET pwd=#{pwd} WHERE email=#{email}
    </update>

</mapper>
